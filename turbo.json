{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["coverage", "runInBand"]
    },
    "test:ci": {
      "dependsOn": ["build"],
      "inputs": []
    }
  }
}
