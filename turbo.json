{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "chart.css"]
    },
    "graphql-codegen": {
      "outputs": ["api.ts"]
    },
    "test": {
      "dependsOn": ["build", "graphql-codegen"],
      "outputs": ["coverage/**"]
    },
    "test:ci": {
      "dependsOn": ["build", "graphql-codegen"],
      "outputs": ["coverage/**"]
    },
    "dist": {
      "dependsOn": ["build", "graphql-codegen"],
      "inputs": ["webpack.config.js"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["build", "graphql-codegen"]
    }
  },
  "globalDependencies": ["$NODE_ENV", "tsconfig.json"]
}
