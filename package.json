{
  "name": "radar-chart",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "turbo run dist",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "codegen": "turbo run codegen:watch",
    "start": "turbo run start",
    "stats": "NODE_ENV=production turbo run stats",
    "format": "prettier --write .",
    "prepare": "is-ci || husky install"
  },
  "workspaces": [
    "config/*",
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendphil/radar-chart.git"
  },
  "author": "Philipp Giese",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/frontendphil/radar-chart/issues"
  },
  "homepage": "https://github.com/frontendphil/radar-chart#readme",
  "devDependencies": {
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "turbo": "1.4.5"
  },
  "prettier": {
    "semi": false
  },
  "lint-staged": {
    "*.{ts,tsx,json,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
